<Window x:Class="MyDictionaryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDictionaryApp"
        mc:Ignorable="d"
        Title="My Dictionary" Height="450" Width="800">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem x:Name="mnDictionary" Header="Dictionary" Click="mnDictionary_Click"/>
            <MenuItem x:Name="mnType" Header="Category" Click="mnType_Click"/>
            <MenuItem x:Name="mnLogout" Header="Logout" Click="mnLogout_Click" />
        </Menu>

        <!-- Content Area -->
        <ContentControl x:Name="ContentArea" Margin="10,30,10,10"/>
    </Grid>
</Window>
